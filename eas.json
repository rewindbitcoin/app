{
  "cli": {
    "version": ">= 5.2.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "distribution": "internal",
      "android": {
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "buildConfiguration": "Debug"
      }
    },
    "preview": {
      "android": {
        "gradleCommand": ":app:assembleRelease"
      },
      "distribution": "internal"
    },
    "preview-simulator": {
      "ios": {
        "simulator": true,
        "buildConfiguration": "Release"
      }
    },
    "production": {
      "autoIncrement": true,
      "ios": {
        "distribution": "store",
        "buildConfiguration": "Release"
      },
      "android": {
        "distribution": "store",
        "buildType": "app-bundle"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
